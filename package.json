{
  "name": "whatsapp-work-view",
  "version": "0.2.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.whatsappworkview",
    "productName": "WhatsApp Work View",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/.*",
      "!*.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WhatsApp Work View"
    }
  },
  "keywords": [
    "whatsapp",
    "web",
    "privacidade",
    "work",
    "trabalho"
  ],
  "author": "Eryc Ferreira",
  "license": "ISC",
  "description": "WhatsappWeb para usar no trabalho preservando as conversas particulares",
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "node-abi": "^4.14.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1"
  }
}
